{
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
      /* Language and Environment */
      "target": "esnext",
      "strict": true,
      "sourceMap": true,
      "outDir": "dist",
      "lib": ["esnext"],
      /* Modules */
      "module": "CommonJs",                           
      "esModuleInterop": true,                             
      "noEmitOnError": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
        "@/utils/*": [
          "utils/*"
        ],
        "@/services/*": [
          "services/*"
        ],
        "@/controllers/*": [
          "controllers/*"
        ],
        "@/routes/*": [
          "routes/*"
        ],
        "@/middlewares/*": [
          "middlewares/*"
        ],
      }
    },
    "include": ["./src/**/*.ts"]
}